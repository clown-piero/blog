<h1>Login now</h1>

<% if @error_message %>
    <%= @error_message %>
<% end %>

<%= form_tag("/login") do %>
    <p>メールアドレス</p>
    <input name="email" value="<%= @email %>">
    <p>パスワード</p>
    <input name="password" value="<%= @password %>">
    <input type="submit" value="ログイン">
<% end %>

<p>新規アカウントをお作りの方は<a href="http://localhost:3000/users/new">こちら</a></p>