<p>
    <%= @blogtext.title %> 
</p>
<p>
    <%= @blogtext.content %>
</p>
<p>
    <%= @user.name %>
</p>

<% if Like.find_by(user_id: @current_user.id, post_id: @blogtext.id) %>
    <%= link_to("いいねを取り消す", "/likes/#{@blogtext.id}/destroy", {method: "post"}) %>
<% else %>
    <%= link_to("いいね", "/likes/#{@blogtext.id}/favorite", {method: "post"}) %>
<% end %>

<% if @user.id == @current_user.id %>
    <p>
        <%= link_to("消去", "/blogtexts/#{@blogtext.id}/destroy", {method: "post"}) %>
    </p>
<% end %>


