<h2><%= @user.name %></h2>


<% if @user.id == @current_user.id %>
    <p><%= @user.email %></p>
    <%= link_to("編集", "/users/#{@user.id}/edit") %>
<% end %>

<ul>
    <li><%= link_to("投稿一覧", "/users/#{@user.id}") %></li>
    <li><%= link_to("いいね一覧", "/users/#{@user.id}/likes") %></li>
</ul>

<% @likes.each do |like| %>
    <% blogtext = Blogtext.find_by(id: like.post_id) %>
    <%= link_to(blogtext.title, "/blogtexts/#{blogtext.id}") %>
    <%= link_to(blogtext.user.name, "/users/#{blogtext.user.id}") %>
<% end %>